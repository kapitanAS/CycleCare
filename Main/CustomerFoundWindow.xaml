<Window x:Class="Main.CustomerFoundWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CustomerFoundWindow" Height="Auto" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Name="clientNameLabel" Content="" Grid.Row="0" HorizontalAlignment="Left" Margin="20,10,0,0" VerticalAlignment="Top" Width="453"/>
        <Button Name="viewButton" Content="View" Grid.Row="0" HorizontalAlignment="Left" Margin="25,40,0,0" VerticalAlignment="Top" Width="75" Click="viewButton_Click"/>
        <Button Name="cancelButton" Content="Cancel" Grid.Row="0" HorizontalAlignment="Left" Margin="220,40,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
        <Button Name ="saveAnywayButton" Content="Save Anyway"  Grid.Row="0" HorizontalAlignment="Left" Margin="400,40,0,0" VerticalAlignment="Top" Width="75" Click="saveAnywayButton_Click"/>
        <DataGrid Name="custompersList" Grid.Row="1" SelectionMode="Single" ScrollViewer.CanContentScroll="True" />
    </Grid>
</Window>
